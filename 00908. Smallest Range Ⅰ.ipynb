   "source": [
    "class Solution:\n",
    "    def smallestRangeI(self, nums: List[int], k: int) -> int:\n",
    "        if len(nums) < 2:\n",
    "            return 0\n",
    "\n",
    "        maxi = max(nums)\n",
    "        mini = min(nums)\n",
    "        if maxi-mini <= k*2:\n",
    "            return 0\n",
    "        else:\n",
    "            return maxi-mini-k*2"
   ]
  }
